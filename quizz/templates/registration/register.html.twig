{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class='border w-2/6 h-5/6 mx-auto '>
        {{ form_start(registrationForm) }}
            <div class='flex flex-col mt-10'>
                <p class='w-fit mx-auto'>{{ form_label(registrationForm.email) }}</p>
                {{ form_widget(registrationForm.email) }}
            </div>
            <div class='flex flex-col'>
                <p class='w-fit mx-auto'>{{ form_label(registrationForm.plainPassword) }}</p>
                {{ form_widget(registrationForm.plainPassword) }}
            </div>
            <div class='flex flex-col'>
                <p class='w-fit mx-auto'>{{ form_label(registrationForm.agreeTerms) }}</p>
                {{ form_widget(registrationForm.agreeTerms) }}
            </div>
            <button type="submit" class="w-full my-2">S'enregistrer</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
