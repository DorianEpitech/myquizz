{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

	{% include "user/nav.html.twig" %}

    <table class="border w-5/6 mx-auto mt-10">
        <thead class='border '>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Mot de passe</th>
                <th>Vérifié</th>
            </tr>
        </thead>
        <tbody>
            <tr class='border'>
                <td class='text-center'>{{ user.id }}</td>
                <td class='text-center'>{{ user.email }}</td>
                <td class='text-center'>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td class='text-center'>{{ user.password }}</td>
                <td class='text-center'>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <div class='flex gap-8 justify-center my-10'>
        <a href="{{ path('app_user_index') }}">Retour</a>
        <a href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
        {{ include('admin/users/_delete_form.html.twig') }}
    </div>



{% endblock %}
