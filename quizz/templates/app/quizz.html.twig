{% extends 'base.html.twig' %}

{% block title %}
	Quizz
{% endblock %}


{% block body %}

	{% include "user/nav.html.twig" %}

	{{ block("categories","app/index.html.twig") }}

	<div class='h-screen'>
		{% for quizz in quizzs %}
			<div class='border w-5/6 ml-auto p-4'>
				<a href="{{ path('app_question', {'id': quizz.id}) }}"> <p class='text-xl text-white bg-stone-600 text-center'>{{ quizz.name }} </p> </a>
			</div>
		{% endfor %}
	</div>

{% endblock %}

